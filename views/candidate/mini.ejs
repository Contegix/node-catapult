<% var job = jobs[candidate.job_id] || extra_jobs[candidate.job_id] %>
<% var color = (Object.keys(jobs).indexOf(candidate.job_id) || 0) + 1 %>

<li class="candidate-mini filter<%= color %> <%= candidate.source_type == 'Employee Referrals' ? 'employeeReferral' : '' %> <%= candidate.group %>">
    
    <div class="tag color<%= color %>">
        <span class="days" ><%- candidate.days || 0 %></span>
    </div>

    <div class="mini-content color<%= color %>">
        <div class="name">
            <%= candidate.name %>
        </div>
    </div>

    <div class="details">
        <h3 class="name"><strong><%= candidate.name %></strong></h3>
        <div class="days <%= candidate.group %> smaller"><%= candidate.status %> <%= candidate.days %> days ago (<%= candidate.date_short %>)</div>

        <div class="title section">
            <a href="/jobs/<%- url(job.title) %>"><%= job.title %></a>
            <div class="team smaller">
                <a class="team" href="/teams/<%- url(job.department) %>"><%= job.department %></a>
            </div>
        </div>

        <div class="hiring section section-title">Search for <%= candidate.name %></div>
        <div class="smaller">
            <a target="_blank" href="https://hire.jobvite.com/Hiring/ViewCandidate.aspx?a=<%- encodeURI(candidate.id) %>">Jobvite</a>
            <a target="_blank" href="http://www.linkedin.com/commonSearch?type=people&keywords=<%= candidate.name %>">LinkedIn</a>
            <a target="_blank" href="http://www.google.com/search?q=<%- encodeURI(candidate.name) %>">Google</a>
            <a target="_blank" href="http://www.facebook.com/search.php?q=<%- encodeURI(candidate.name) %>">Facebook</a>
            <a target="_blank" href="http://stackexchange.com/search?q=<%- encodeURI(candidate.name) %>">StackExchange</a>
        </div>

        <div class="<%= (candidate.source_type == 'Employee Referrals') ? ' source-employee' : '' %>">
            <div class="source section section-title">Source</div>
            <div class="smaller">
                <%- candidate.source || candidate.source_type %>
            </div>
        </div>

        <div class="columns clearfix smaller">
            <div class="col1">
                <div class="hiring section">Hiring Managers</div>
                    <% if (job.managers && job.managers.length > 0) {  %>
                    <ul>
                        <li><%- job.managers.join('</li><li>') %></li>
                    </ul>
                    <% } else { %>
                    <strong class='bad'>No Hiring Manger</strong>
                    <% } %>
                </div>
            <div class="col2">
                <div class="recruiters section">Recruiters</div>
                <% if (job.recruiters && job.recruiters.length > 0) { %>
                <ul>
                    <li><%- job.recruiters.join('</li><li>') %></li>
                </ul>
                <% } else { %>
                <strong class='bad'>No Recruiter</strong>
                <% } %>
            </div>
        </div>
    </div>


</li>
